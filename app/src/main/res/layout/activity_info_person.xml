                        android:layout_marginEnd="@dimen/dimen_10"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="工作单位"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"/>
                        <EditText
                            android:id="@+id/info_person_company"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:hint="请填写工作单位"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@null"
                            android:gravity="end|center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"/>
                    <RelativeLayout
                        android:id="@+id/info_person_employing_rel"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:id="@+id/info_person_txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="用工方式"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"
                            android:layout_toRightOf="@id/info_person_txt3"/>
                        <ImageView
                            android:id="@+id/info_img_right5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/right_pic"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                        <TextView
                            android:id="@+id/info_person_employing_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:hint="选择"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@null"
                            android:gravity="end|center_vertical"
                            android:layout_toLeftOf="@id/info_img_right5"
                            android:layout_marginEnd="@dimen/dimen_5"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="联系电话"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"/>
                        <EditText
                            android:id="@+id/info_person_tel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:hint="请填写联系电话"
                            android:textColor="@color/text_color2"
                            android:textSize="@dimen/dimen_16sp"
                            android:background="@null"
                            android:inputType="phone"
                            android:gravity="end|center_vertical"/>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:id="@+id/info_person_txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="流动人口"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"
                            android:layout_toRightOf="@id/info_person_txt4"/>
                        <RadioGroup
                            android:id="@+id/info_person_flow_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true">
                            <RadioButton
                                android:id="@+id/info_person_flow_y"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="是"/>
                            <RadioButton
                                android:id="@+id/info_person_flow_n"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="否"/>
                        </RadioGroup>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:id="@+id/info_person_txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="外籍人口"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"
                            android:layout_toRightOf="@id/info_person_txt5"/>
                        <RadioGroup
                            android:id="@+id/info_person_foreign_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true">
                            <RadioButton
                                android:id="@+id/info_person_foreign_y"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="是"/>
                            <RadioButton
                                android:id="@+id/info_person_foreign_n"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="否"/>
                        </RadioGroup>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:background="@color/line_color"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginEnd="@dimen/dimen_10"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimen_5">
                        <TextView
                            android:id="@+id/info_person_txt6"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="关注"
                            android:textSize="@dimen/dimen_16sp"
                            android:textColor="@color/text_color1"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="*"
                            android:textColor="@color/red"
                            android:textSize="@dimen/dimen_16sp"
                            android:layout_toRightOf="@id/info_person_txt6"/>
                        <RadioGroup
                            android:id="@+id/info_person_attention_rad"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_alignParentEnd="true">
                            <RadioButton
                                android:id="@+id/info_person_attention_y"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="是"/>
                            <RadioButton
                                android:id="@+id/info_person_attention_n"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="否"/>
