<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_"
        android:layout_margin="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:text="营业状态"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/btn_logout_pressed"
                android:gravity="center"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_house_form_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_house_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="主营类别"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_house_txt4"/>
                <ImageView
                    android:id="@+id/info_img_right4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_company_business_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right4"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="类别细分"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"/>
                <EditText
                    android:id="@+id/info_company_business_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请填写主营类别"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_house_structure_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_house_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="兼营类别"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_house_txt5"/>
                <ImageView
                    android:id="@+id/info_img_right5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_company_work_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right5"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="类别细分"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"/>
                <EditText
                    android:id="@+id/info_company_work_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请填写兼营类别"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_company_license_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_company_txt5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="相关证照"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_company_txt5"/>
                <ImageView
                    android:id="@+id/info_img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_company_license_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="编号"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"/>
                <EditText
                    android:id="@+id/info_company_number_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请填写编号"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_company_state_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_company_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="营业状态"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_company_txt1"/>
                <ImageView
                    android:id="@+id/info_img_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_company_state_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right1"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>
            <View
                android:id="@+id/info_house_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_company_start_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="起始时间"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/info_company_start"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="\u0008    年   月   日"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_company_end_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="截止时间"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/info_company_end"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="\u0008    年   月   日"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <android.support.v7.widget.CardView
                android:id="@+id/info_company_img_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_"
                android:layout_margin="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_100"
                    android:id="@+id/info_company_img"
                    android:src="@mipmap/add_contact"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>