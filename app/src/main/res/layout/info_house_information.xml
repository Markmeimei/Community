<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_"
        android:layout_margin="@dimen/dimen_5"
        android:layout_marginTop="@dimen/dimen_10"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:text="房屋信息"
                android:textSize="@dimen/dimen_20sp"
                android:textColor="@color/btn_logout_pressed"
                android:gravity="center"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_house_purpose_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_house_txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="房屋用途"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_house_txt1"/>
                <ImageView
                    android:id="@+id/info_img_right1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_house_purpose_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right1"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="房间数"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"/>
                <EditText
                    android:id="@+id/info_house_room_num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请填写房间数"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:inputType="number"
                    android:background="@null"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_house_type_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_house_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="使用类型"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_house_txt2"/>
                <ImageView
                    android:id="@+id/info_img_right3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_pic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/info_house_type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="选择"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_toLeftOf="@id/info_img_right3"
                    android:layout_marginEnd="@dimen/dimen_5"/>

            </RelativeLayout>
            <View
                android:id="@+id/info_house_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:id="@+id/info_house_time_rel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="租赁时间"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/info_house_end"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="\u0008    年   月   日"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:id="@+id/info_txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="至"
                    android:textSize="@dimen/dimen_18sp"
                    android:textColor="@color/text_color1"
                    android:layout_toLeftOf="@id/info_house_end"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/info_house_start"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:hint="\u0008    年   月   日"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:layout_marginEnd="@dimen/dimen_5"
                    android:layout_toLeftOf="@id/info_txt_1"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="面积"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <EditText
                    android:id="@+id/info_house_room_area"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请填写面积"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/dimen_16sp"
                    android:background="@null"
                    android:gravity="end|center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:id="@+id/info_house_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="方位照"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_toRightOf="@id/info_house_txt3"/>
                <RadioGroup
                    android:id="@+id/info_house_img_rad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true">
                    <RadioButton
                        android:id="@+id/info_house_img_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有"/>
                    <RadioButton
                        android:id="@+id/info_house_img_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无"/>
                </RadioGroup>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/info_house_img_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_"
                android:layout_margin="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/dimen_100"
                    android:layout_height="@dimen/dimen_100"
                    android:id="@+id/info_house_img"
                    android:src="@mipmap/add_contact"/>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_10"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:padding="@dimen/dimen_5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="是否需要日常检查"
                    android:textSize="@dimen/dimen_16sp"
                    android:textColor="@color/text_color1"
                    android:gravity="center_vertical"/>
                <RadioGroup
                    android:id="@+id/info_house_daily_rad"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true">
                    <RadioButton
                        android:id="@+id/info_house_daily_y"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是"/>
                    <RadioButton
                        android:id="@+id/info_house_daily_n"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否"/>
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>