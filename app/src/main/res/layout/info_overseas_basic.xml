<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    app:cardBackgroundColor="@color/white_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:gravity="center"
            android:text="基本情况"
            android:textColor="@color/btn_logout_pressed"
            android:textSize="@dimen/dimen_20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="英文名"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_basic_FirstName"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="请填写名"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="英文姓"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_basic_LastName"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="请填写姓"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="中文姓名"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_basic_Name"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="请填写中文姓名"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <RadioGroup
                android:id="@+id/info_overseas_basic_Sex"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/info_overseas_basic_Man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />

                <RadioButton
                    android:id="@+id/info_overseas_basic_Woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="国家/地区"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_basic_State"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="出生日期"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_basic_BirthDate"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_150"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/info_overseas_basic_Photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:src="@mipmap/add_contact" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>