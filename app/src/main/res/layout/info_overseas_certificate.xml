<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5"
    app:cardBackgroundColor="@color/white_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:gravity="center"
            android:text="所持有效证件情况"
            android:textColor="@color/btn_logout_pressed"
            android:textSize="@dimen/dimen_20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="证件种类"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_PapersType"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="证件号码"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_certificate_PapersNumber"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="请填写证件号码"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="证件有效期"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_PapersDate"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="身份证号码"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_certificate_IdentityNumber"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="请填写身份证号码"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:text="签证(注)/居留许可种类"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <com.example.community.widget.FlowRadioGroup
                android:id="@+id/info_overseas_certificate_FlowRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/info_overseas_certificate_RadioButton_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="访问"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />

                <RadioButton
                    android:id="@+id/info_overseas_certificate_RadioButton_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />

                <RadioButton
                    android:id="@+id/info_overseas_certificate_RadioButton_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外国人居留许可"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />

                <RadioButton
                    android:id="@+id/info_overseas_certificate_RadioButton_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />
            </com.example.community.widget.FlowRadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:gravity="center_vertical"
                android:text="签证(注)/居留许可号码"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <EditText
                android:id="@+id/info_overseas_certificate_PermissionNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="请填写许可号码"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="有效次数"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_Validity"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="签发日期"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info_overseas_certificate_StartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="选择日期"
                    android:singleLine="true"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="  至  "
                    android:textColor="@color/text_color1"
                    android:textSize="@dimen/dimen_16sp" />

                <TextView
                    android:id="@+id/info_overseas_certificate_EndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="选择日期"
                    android:singleLine="true"
                    android:textSize="@dimen/dimen_16sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="签发地"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_IssueAt"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="入境时间"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_EnterDate"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择日期"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="入境口岸"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_EnterPort"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text="离开时间"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/info_overseas_certificate_LeaveDate"
                android:layout_width="@dimen/dimen_0"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center"
                android:hint="选择日期"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>